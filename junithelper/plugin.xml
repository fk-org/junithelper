<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="org.eclipse.ui.views" name="org.eclipse.ui.views"/>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.googlecode.plugin.junithelper.command.category"
            name="JUnit Helper">
      </category>
      <command
            id="com.googlecode.plugin.junithelper.action.OpenTestCaseActionCommand"
            categoryId="com.googlecode.plugin.junithelper.command.category"
            name="Open Test Class">
      </command>
      <command
            id="com.googlecode.plugin.junithelper.action.OpenTestTargetActionCommand"
            categoryId="com.googlecode.plugin.junithelper.command.category"
            name="Open Test Target">
      </command>
   </extension>
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.googlecode.plugin.junithelper.handler.OpenTestCaseHandler"
            commandId="com.googlecode.plugin.junithelper.action.OpenTestCaseActionCommand" >
      </handler>
      <handler
            class="com.googlecode.plugin.junithelper.handler.OpenTestTargetHandler"
            commandId="com.googlecode.plugin.junithelper.action.OpenTestTargetActionCommand" >
      </handler>
   </extension>
   
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.googlecode.plugin.junithelper.action.OpenTestCaseActionCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+8">
      </key>
      <key
            commandId="com.googlecode.plugin.junithelper.action.OpenTestTargetActionCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+9">
      </key>
   </extension>
   
