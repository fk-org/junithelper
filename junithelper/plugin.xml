	<!-- create new test class -->
	<extension point="org.eclipse.ui.popupMenus">

		<!-- package explorer -->
		<objectContribution
			id="com.googlecode.plugin.junithelper.popupmenu.contribution"
			objectClass="org.eclipse.jdt.core.IJavaElement">
			<menu
				id="com.googlecode.plugin.junithelper.popupmenu"
				label="JUnit Helper"
				path="additions">
			</menu>
			<action
		         class="com.googlecode.plugin.junithelper.action.OpenTestCaseAction"
		         id="com.googlecode.plugin.junithelper.action.OpenTestCaseAction.object"
		         label="Open Test Class Ctrl+8"
		         menubarPath="com.googlecode.plugin.junithelper.popupmenu/additions" >
			</action>
			<action
				label="Open Test Target Ctrl+9"
				class="com.googlecode.plugin.junithelper.action.OpenTestCaseAction"
				id="com.googlecode.plugin.junithelper.action.OpenTestTargetAction.viewer">
			</action>
		</objectContribution>

		<!-- navigator -->
		<objectContribution
			id="com.googlecode.plugin.junithelper.popupmenu.contribution"
			nameFilter="*.java"
			objectClass="org.eclipse.core.resource.IResource">
			<menu
				id="com.googlecode.plugin.junithelper.popupmenu"
				label="JUnit Helper"
				path="additions">
			</menu>
			<action
		         class="com.googlecode.plugin.junithelper.action.OpenTestCaseAction"
		         id="com.googlecode.plugin.junithelper.action.OpenTestCaseAction.object"
		         label="Open Test Class Ctrl+8"
		         menubarPath="com.googlecode.plugin.junithelper.popupmenu/additions" >
			</action>
			<action
				label="Open Test Target Ctrl+9"
				class="com.googlecode.plugin.junithelper.action.OpenTestCaseAction"
				id="com.googlecode.plugin.junithelper.action.OpenTestTargetAction.viewer">
			</action>
		</objectContribution>

		<!-- java editor -->
		<viewerContribution
			targetID="#CompilationUnitEditorContext"
			id="com.googlecode.plugin.junithelper.test.framework.create">
			<action
				label="Open Test Class Ctrl+8"
				class="com.googlecode.plugin.junithelper.action.OpenTestCaseAction"
				id="com.googlecode.plugin.junithelper.action.OpenTestCaseAction.viewer">
			</action>
			<action
				label="Open Test Target Ctrl+9"
				class="com.googlecode.plugin.junithelper.action.OpenTestCaseAction"
				id="com.googlecode.plugin.junithelper.action.OpenTestTargetAction.viewer">
			</action>
		</viewerContribution>

	</extension>

</plugin>
